{
  "version": 2,
  "builds": [
    {
      "src": "api/orion.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/orion.py"
    },
    {
      "src": "/health",
      "dest": "/api/orion.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/orion.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "FLASK_ENV": "production"
  }
}
