{
  "version": 2,
  "builds": [
    {
      "src": "api/orion.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/orion.py"
    },
    {
      "src": "/health",
      "dest": "/api/orion.py"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/orion.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "FLASK_ENV": "production"
  }
}
