# Orion Voice Assistant Environment Variables
# Copy this to .env and fill in your actual values

# GROQ AI API Key (required for AI responses)
GROQ_API_KEY=your_groq_api_key_here

# Flask Secret Key (for session management)
SECRET_KEY=your_super_secret_key_here

# Database URL (for production deployment)
DATABASE_URL=sqlite:///orion_vva.db

# OpenWeather API Key (optional, for weather features)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Flask Environment
FLASK_ENV=production